#!/bin/bash

if [ "$1" == "aqua" ] ; then
    for i in `ls *.plt` ; do sed "s/^set term.*$/set term pngcairo size 1600, 1000 font 'Tahoma,10' enhanced/;s/^set output .*$//" $i > $i.new ; done
elif [ "$1" == "png" ] ; then
    for i in `ls *.plt` ; do sed "s/^set output .*$//;s/^set term.*$/set term pngcairo size 1600, 1000 font 'Tahoma,10' enhanced\nset output '$n'/" $i > $i.new ; done
else
    echo "Unknown terminal, use aqua or png"
fi
